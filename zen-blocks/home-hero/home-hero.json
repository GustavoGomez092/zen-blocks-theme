{
	"name": "zen-blocks/home-hero",
	"title": "Home Hero",
	"category": "design",
	"icon": "shield",
	"description": "Centered dark hero with badge, large heading, subtitle, and CTA.",
	"keywords": ["hero", "header", "security", "antivirus"],
	"version": "1.0.0",
	"supports": {
		"align": ["wide", "full"],
		"anchor": true,
		"customClassName": true,
		"html": true,
		"spacing": {
			"blockGap": null
		}
	},
	"zenb": {
		"controls": {
			"show_badge": {
				"type": "toggle",
				"label": "Show Badge",
				"default": true
			},
			"show_subtitle": {
				"type": "toggle",
				"label": "Show Subtitle",
				"default": true
			},
			"show_button": {
				"type": "toggle",
				"label": "Show Button",
				"default": true
			},
			"max_width": {
				"type": "range",
				"label": "Max Content Width (px)",
				"default": 880,
				"min": 560,
				"max": 1200,
				"step": 20
			}
		}
	}
}
